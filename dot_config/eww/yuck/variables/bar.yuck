; Network
(defpoll interfaceId :initial "enp1s0" :interval "1m" "nmcli c s --active | awk '/wifi|ethernet/ {print $6}' | head -n 1")
(defpoll COL_WLAN :interval "20s" :run_while wifi_reveal "scripts/stats network --col")
(defpoll ESSID_WLAN :interval "20s" :run_while wifi_reveal "scripts/stats network --essid")
(defpoll WLAN_ICON :interval "20s" :run_while wifi_reveal  "scripts/stats network --icon")

; battery
(defpoll battery :initial "100" :interval "1s" :run_while control_reveal "scripts/stats battery --percent")
(defpoll battery_status :initial "Full" :interval "1s" :run_while control_reveal "scripts/stats battery --status")

; Notification variables
(defpoll notificationIcon :interval "1s" :run_while notifications_reveal "scripts/stats notifications --icon")
(defpoll notificationNum :interval "1s" :run_while notifications_reveal "scripts/stats notifications --num")

