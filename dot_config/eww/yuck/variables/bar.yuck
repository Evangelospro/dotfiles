; top bar
; Clock / Calendar
(defpoll clock_time :interval "5s" "date '+\%lï›˜\%M \%p'")
(defpoll clock_date :interval "10h" "date '+%b %d, %Y'")
(defpoll calendar_day :interval "20h" "date '+%d'")
(defpoll calendar_year :interval "20h" "date '+%Y'")

