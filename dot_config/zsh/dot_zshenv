# Autonotify when a long command has been completed
export AUTO_NOTIFY_THRESHOLD=450
export AUTO_NOTIFY_TITLE="Boss! the command: %command has just finished"
export AUTO_NOTIFY_BODY="Time taken: %elapsed seconds exit code: %exit_code, have a look"
export AUTO_NOTIFY_IGNORE=("vpn", "htb", "thm", "ipython", "docker", "man", "nano", "vim", "ssh", "less", "e", "openvpn", "ping", "nc", "penelope", 'code', 'crontab', 'watch')
export AUTO_NOTIFY_EXPIRE_TIME=4

# Adding to the PATH
export PATH="$PATH:$HOME/.cargo/bin/"
export PATH="$PATH:$HOME/.local/bin/"
export PATH="$PATH:$HOME/bin/"
export PATH="$PATH:$HOME/.local/share/gem/ruby/3.0.0/bin"
export PATH="$PATH:$HOME/.rvm/bin"
export PATH="$PATH:$GOPATH/bin"

# XDG Base Directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_STATE_HOME="$HOME/.local/state"

# Programming languages
# Java
export JAVA_HOME="/usr/lib/jvm/java-11-openjdk/"
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME/java"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
# Ruby
export GEM_HOME=$HOME/$XDG_DATA_HOME/ruby/
# Python
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export WORKON_HOME="$HOME/$XDG_DATA_HOME/virtualenvs"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
# Rust
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
# Go
export GOPATH="$XDG_DATA_HOME/go"
# Js
export NODE_REPL_HISTORY="$XDG_DATA_HOME"/node_repl_history

# Sqlite
export SQLITE_HISTORY="$XDG_CACHE_HOME/sqlite_history"

# Wine
export WINEPREFIX="$XDG_DATA_HOME"/wine

# Sage
export DOT_SAGE="$XDG_CONFIG_HOME/sage"

# Android studio
export ANDROID_HOME="$XDG_DATA_HOME/android"

# gnupg
export GNUPGHOME="$XDG_DATA_HOME/gnupg"

# Docker
export DOCKER_CONFIG="$XDG_CONFIG_HOME"/docker

# Nuget
export NUGET_PACKAGES="$XDG_CACHE_HOME"/NuGetPackages

# GDB
export GDBHISTFILE="$XDG_CONFIG_HOME"/gdb/.gdb_history

# ZSH
export ZSH="$XDG_CONFIG_HOME/zsh"
export GITSTATUS_CACHE_DIR="$ZSH/scripts/utils/gitstatus"
skip_global_compinit=1
typeset -A ZI
ZI[HOME_DIR]="$ZSH/.zi"
ZI[BIN_DIR]="$ZSH/.zi/bin"
ZI[CACHE_DIR]="$ZSH/.zi/cache"
ZI[ZCOMPDUMP_PATH]="$XDG_CACHE_HOME/zsh/zcompdump-$ZSH_VERSION"


export ZINIT_HOME="$ZSH/zinit/zinit.git"
_ZO_DATA_DIR="$ZSH/zoxide"


# Hacking tools
export HACKING_TOOLS="$HOME/HACKING/Tools"
export HackingSetupScripts="$HOME/HACKING/Tools/Setup-Scripts"

# Editor
export VISUAL="code";
export EDITOR="code";
export EDITOR_DIR="/opt/visual-studio-code"

# Theming
export MANPAGER="/usr/bin/less -s -M +Gg"
export LESS_TERMCAP_mb=$'\e[1;31m'      # begin bold
export LESS_TERMCAP_md=$'\e[1;34m'      # begin blink
export LESS_TERMCAP_so=$'\e[01;45;37m'  # begin reverse video
export LESS_TERMCAP_us=$'\e[01;36m'     # begin underline
export LESS_TERMCAP_me=$'\e[0m'         # reset bold/blink
export LESS_TERMCAP_se=$'\e[0m'         # reset reverse video
export LESS_TERMCAP_ue=$'\e[0m'         # reset underline
export GROFF_NO_SGR=1                   # for konsole
