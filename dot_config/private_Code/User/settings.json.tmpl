{
	// ZEN MODE
	"zenMode.centerLayout": false,
	"zenMode.hideStatusBar": false,
	"zenMode.hideLineNumbers": false,
	{{- if eq .chezmoi.os "linux" }}
	"window.zoomLevel": 2,
	{{- else }}
	"window.zoomLevel": 1,
	{{- end }}
	"window.commandCenter": false,
	"window.newWindowDimensions": "fullscreen",
	"window.restoreWindows": "one",
	"window.title": "${activeEditorShort}${separator}${rootName}",
	"window.titleBarStyle": "custom", // MUST BE CUSTOM for wayland support to work
	"window.titleSeparator": " | ",
	// WORKBENCH SETTINGS
	"workbench.activityBar.location": "top",
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": false,
	"workbench.editor.showTabs": "multiple",
	"workbench.editor.tabCloseButton": "right",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.enablePreview": false,
	"workbench.colorTheme": "Sweet Dracula",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.type": "menu",
	"workbench.list.smoothScrolling": true,
	"workbench.startupEditor": "none",
	"workbench.statusBar.visible": true,
	"workbench.panel.defaultLocation": "bottom",
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter-notebook"
	},
	"workbench.colorCustomizations": {
		"[Sweet Dracula]": {
			"editorGroupHeader.tabsBackground": "#161925"
		}
	},
	"workbench.reduceMotion": "on",
	// EDITOR SETTINGS
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.acceptSuggestionOnEnter": "smart",
	"editor.autoClosingBrackets": "always",
	"editor.bracketPairColorization.enabled": true,
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.detectIndentation": false,
	"editor.emptySelectionClipboard": false,
	"editor.fontFamily": "FiraCode Nerd Font",
	"editor.fontLigatures": true,
	"editor.fontSize": 15,
	"editor.insertSpaces": true, // not sure
	"editor.indentSize": "tabSize",
	"editor.inlineSuggest.enabled": true,
	"editor.minimap.enabled": false,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.glyphMargin": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": "active",
	"editor.guides.highlightActiveBracketPair": true,
	"editor.hover.above": true,
	"editor.inlayHints.enabled": "on",
	"editor.linkedEditing": true,
	"editor.lineNumbers": "on",
	"editor.matchBrackets": "always",
	"editor.maxTokenizationLineLength": 99999999,
	"editor.mouseWheelScrollSensitivity": 1.5,
	"editor.occurrencesHighlight": "singleFile",
	"editor.renderControlCharacters": true,
	"editor.renderFinalNewline": "on",
	"editor.renderLineHighlight": "all",
	"editor.renderWhitespace": "none",
	"editor.scrollbar.horizontal": "auto",
	"editor.scrollbar.vertical": "auto",
	"editor.selectionHighlight": true,
	"editor.smoothScrolling": true,
	"editor.stickyTabStops": false,
	"editor.suggestLineHeight": 28,
	"editor.suggestSelection": "first",
	"editor.suggest.insertMode": "replace",
	"editor.suggest.preview": true,
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.tabCompletion": "on",
	"editor.tabSize": 4,
	"editor.wordBasedSuggestions": "matchingDocuments",
	"editor.wordBasedSuggestionsMode": "matchingDocuments",
	"editor.wordWrap": "on",
	"editor.quickSuggestions": {
		"other": "on",
		"comments": "on",
		"strings": "on"
	},
	// TERMINAL
	"terminal.external.linuxExec": "{{.applications.terminal.linux.command}}",
	"terminal.explorerKind": "both",
	"terminal.sourceControlRepositoriesKind": "both",
	"terminal.integrated.fontFamily": "FiraCode Nerd Font",
	"terminal.integrated.altClickMovesCursor": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.customGlyphs": true,
	"terminal.integrated.cursorStyle": "block",
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.gpuAcceleration": "auto",
	"terminal.integrated.scrollback": 200000,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.tabs.enableAnimation": false,
	"terminal.integrated.profiles.linux": {
		"zsh": {
			"path": "/usr/bin/zsh"
		}
	},
	"terminal.integrated.shellIntegration.enabled": true,
	// FORMATTING
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	// LANGUAGE SPECIFIC
	"[python]": {
        "editor.formatOnSaveMode": "file",
        "editor.formatOnType": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "python.REPL.enableREPLSmartSend": false,
	"python.analysis.completeFunctionParens": true,
	"python.analysis.typeCheckingMode": "basic",
	"python.analysis.autoFormatStrings": true,
	"python.analysis.autoImportCompletions": true,
    "ruff.nativeServer": "on",
	"python.analysis.exclude": [
		".git",
		"**/node_modules",
		"**/__pycache__",
		".vscode/*.py",
		"**/site-packages/**/*.py"
	],
	"python.analysis.ignore": [
		".git",
		"**/node_modules",
		"**/__pycache__",
		".vscode/*.py",
		"**/site-packages/**/*.py"
	],
	"java.server.launchMode": "Standard",
	"[html]": {
		"editor.tabSize": 4
	},
	"html.autoClosingTags": true,
	"html.completion.attributeDefaultValue": "singlequotes",
	"[dart]": {
		"editor.suggestSelection": "first",
		"editor.tabCompletion": "onlySnippets",
		"editor.wordBasedSuggestions": "off"
	},
	"[javascript]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"javascript.autoClosingTags": true,
	"javascript.suggest.autoImports": true,
	"javascript.suggest.completeFunctionCalls": true,
	"javascript.suggest.enabled": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.validate.enable": false,
	"[json]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"json.maxItemsComputed": 100000,
	"[markdown]": {
		"editor.quickSuggestions": {
			"other": "on",
			"comments": "on",
			"strings": "on"
		}
	},
	"[scss]": {
		"editor.tabSize": 4,
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[typescript]": {
		"editor.tabSize": 4
	},
	"typescript.autoClosingTags": true,
	"typescript.suggest.autoImports": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.validate.enable": false,
	"[typescriptreact]": {
		"editor.tabSize": 4,
		"editor.formatOnSave": false
	},
	"js/ts.implicitProjectConfig.checkJs": true,
	"github.copilot.enable": {
		"*": true,
		"plaintext": true,
		"markdown": true,
		"scminput": false,
		"yaml": true
	},
	"git.enableSmartCommit": true,
	"git.allowForcePush": true,
	"git.autofetch": true,
	"github.copilot.advanced": {},
	"git.confirmSync": false,
	"git.confirmForcePush": false,
	"git.openRepositoryInParentFolders": "always",
	// Gitlens
	"gitlens.currentLine.enabled": true,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.codeLens.enabled": false,
	"gitlens.statusBar.enabled": true,
	"gitlens.blame.highlight.enabled": false,
	"gitlens.codeLens.authors.enabled": false,
	"gitlens.codeLens.recentChange.enabled": false,
	"gitlens.currentLine.scrollable": false,
	// FILE EXPLORER
	"explorer.openEditors.visible": 0,
	"explorer.autoReveal": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"files.autoSave": "afterDelay",
	// SNYK
	{{- if eq .chezmoi.os "linux" }}
	"snyk.advanced.cliPath": "{{.chezmoi.homeDir}}/.local/share/snyk-ls/snyk-linux",
	"snyk.advanced.languageServerPath": "{{.chezmoi.homeDir}}/.local/share/snyk/snyk-ls-linux",
	{{- else if eq .chezmoi.os "windows" }}
	"snyk.advanced.cliPath": "{{ .chezmoi.homeDir }}\\AppData\\Local\\snyk-ls\\snyk-win.exe",
	"snyk.advanced.languageServerPath": "{{ .chezmoi.homeDir }}\\AppData\\Local\\snyk\\snyk-ls-win.exe",
	{{- end }}
	"snyk.trustedFolders": ["{{ .chezmoi.homeDir }}"],
	"snyk.yesWelcomeNotification": false,
	// EXTENSIONS
	"settingsSync.ignoredExtensions": ["WakaTime.vscode-wakatime"],
	// APKLAB
	"apklab.apkSignerPath": "{{ .chezmoi.homeDir }}/.apklab/uber-apk-signer-1.3.0.jar",
	"apklab.apktoolPath": "{{ .chezmoi.homeDir }}/.apklab/apktool_2.9.3.jar",
	"apklab.jadxDirPath": "{{ .chezmoi.homeDir }}/.apklab/jadx-1.4.7",
	"apklab.initProjectDirAsGit": false,
	// SECURITY
	"security.workspace.trust.banner": "always",
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	// Disable telemetry
	"telemetry.telemetryLevel": "off",
	"redhat.telemetry.enabled": false,
	"gitlens.telemetry.enabled": false,
	// MISC / GENERAL
	"update.showReleaseNotes": false,
	"diffEditor.ignoreTrimWhitespace": true,
	"debug.onTaskErrors": "showErrors",
	"debug.openDebug": "openOnDebugBreak",
	// "eslint.enable": true,
	"extensions.autoUpdate": true,
	"extensions.ignoreRecommendations": true,
	"files.insertFinalNewline": true,
	"files.restoreUndoStack": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.associations": {
		"*.code-snippets.tmpl": "snippets",
		"*.json.tmpl": "json",
		"*.jsonc.tmpl": "jsonc",
		"settings.json.tmpl": "jsonc"
	},
	"grammarly.files.include": ["**/*.md", "**/*.txt", "**/*.tex"],
	"[shellscript]": {
		"editor.defaultFormatter": "foxundermoon.shell-format"
	},
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"jupyter.askForKernelRestart": false,
	"liveshare.notebooks.allowGuestExecuteCells": true,
	// REMOTE SSH
	"remote.SSH.useLocalServer": false,
	"remote.SSH.remotePlatform": {
		"ewebsite": "linux",
		"ftc13906.com": "linux",
		"portainer": "linux",
		"vulnbox.infra": "linux",
		"c2": "linux",
        "router.infra": "linux"
	},
	"remote.SSH.defaultExtensions": [
		"charliermarsh.ruff",
		"donjayamanne.python-extension-pack",
		"walkme.python-extension-pack",
		"esbenp.prettier-vscode",
		"kevinrose.vsc-python-indent",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"oderwat.indent-rainbow",
		"wayou.vscode-todo-highlight"
	],
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.defaultColorDecorators": "auto",
	"workbench.preferredDarkColorTheme": "Sweet Dracula",
	"workbench.editor.empty.hint": "hidden",
	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1
	},
	"vscode-neovim.ctrlKeysForInsertMode": ["d", "h", "j", "o", "r", "t", "u"],
	"vscode-neovim.ctrlKeysForNormalMode": [
		"b",
		"d",
		"e",
		"h",
		"i",
		"j",
		"k",
		"l",
		"r",
		"t",
		"u",
		"x",
		"y",
		"/",
		"]",
		"right",
		"left",
		"up",
		"down",
		"backspace",
		"delete"
	],
	"vscode-neovim.neovimInitVimPaths.linux": "{{.chezmoi.homeDir}}/.config/nvim/init.vim",
	"workbench.editor.tabActionLocation": "right",
	"breadcrumbs.enabled": false,
	"editor.stickyScroll.enabled": false,
	"update.mode": "none",
	"[properties]": {
		"editor.defaultFormatter": "foxundermoon.shell-format"
	},
	"github.copilot.editor.enableAutoCompletions": true,
	"go.toolsManagement.autoUpdate": true,
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.js",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
		"*.sqlite": "${capture}.${extname}-*",
		"*.db": "${capture}.${extname}-*",
		"*.sqlite3": "${capture}.${extname}-*",
		"*.db3": "${capture}.${extname}-*",
		"*.sdb": "${capture}.${extname}-*",
		"*.s3db": "${capture}.${extname}-*"
	},
	"explorer.confirmPasteNative": false,
	"[dotenv]": {
		"editor.defaultFormatter": "foxundermoon.shell-format"
	},
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"snyk.folderConfigs": [
		{
			"folderPath": "",
			"baseBranch": ""
		}
	]
}
