# Variables in caps are special variables
env = TERMINAL, "wezterm" 
env = fileManager, "nautilus"
env = browser, "google-chrome-stable"
env = EDITOR, "code"

# located in $HOME/.local/bin (which must be in $PATH)
env = clipMenu, "$HOME/.local/bin/clipMenu"
env = lockscreen, "$HOME/.local/bin/lockscreen"
# env = launcher, "$HOME/.local/bin/launcher"
env = ewwLaunch, "$HOME/.local/bin/ewwLaunch"

$MOD = SUPER
$SHIFT_MOD = $MOD_SHIFT

bind=$MOD,RETURN,exec,eval $TERMINAL
bind=ALT_L,F4,killactive
bind=ALT_L,XF86Back,killactive
bind=CTRL_SHIFT,ESC,exec,hyprctl kill # xkill like functionality
bind=$MOD,M,exit
bind=$MOD,E,exec,eval $fileManager
bind=$SHIFT_MOD,E,exec,eval $ewwLaunch
bind=$SHIFT_MOD,F,togglefloating,
bind=$MOD,P,exec,~/.config/hypr/scripts/monitors
bind=$MOD,F,fullscreen
bind=$MOD,L,exec,eval $lockscreen
bind=$MOD,SPACE,exec,ulauncher-toggle
bind=,XF86Search,exec,eval $launcher
# bind=,XF86Calculator,exec,""
bind=$MOD,V,exec,eval $clipMenu
bind=$MOD,C,exec,hyprpicker | wl-copy
bind=$SHIFT_MOD,Z,exec,~/.config/hypr/scripts/toggle_opacity

# Disable animations for screenshot
bind=,Print,exec,hyprctl keyword animation "fadeOut,0,0,default";flameshot gui;hyprctl keyword animation "fadeOut,1,4,default"
# select area to perform OCR on
bind=$MOD,O,exec,wl-ocr

# Function keys
binde=,XF86AudioRaiseVolume,exec,volumectl -b up
binde=,XF86AudioLowerVolume,exec,volumectl -b down
bind=,XF86AudioMute,exec,volumectl toggle-mute
bind=,XF86AudioPlay,exec,playerctl play-pause
bind=,XF86AudioNext,exec,playerctl next
bind=,XF86AudioPrev,exec,playerctl previous
binde=,XF86MonBrightnessUp,exec,lightctl up
binde=,XF86MonBrightnessDown,exec,lightctl down

bind=$MOD,left,movefocus,l
bind=$MOD,right,movefocus,r
bind=$MOD,up,movefocus,u
bind=$MOD,down,movefocus,d

bind=$MOD,A,movewindow,l
bind=$MOD,D,movewindow,r
bind=$MOD,W,movewindow,u
bind=$MOD,S,movewindow,d

# bind=$SHIFT_MOD,R,hyprload,reload
# bind=$SHIFT_MOD,U,hyprload,update

# bind=$SHIFT_MOD,left,movecurrentworkspacetomonitor,eDP-1
# bind=$SHIFT_MOD,right,movecurrentworkspacetomonitor,HDMI-A-1
bind=$SHIFT_MOD,left,movewindow,mon:eDP-1
{{ if eq .chezmoi.os "ELARCH-WORK" }}
bind=$SHIFT_MOD,right,movewindow,mon:VGA-1
{{ else }}
bind=$SHIFT_MOD,right,movewindow,mon:HDMI-A-1
{{- end }}
