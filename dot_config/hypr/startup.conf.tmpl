# XDG portals(long up startup fix)
exec-once=/usr/bin/systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once=/usr/bin/dbus-update-activation-environment --all
# exec-once=$HOME/.config/hypr/scripts/default/fix-xdg-portals

# scale apps
exec = xprop -root -f _XWAYLAND_GLOBAL_OUTPUT_SCALE 32c -set _XWAYLAND_GLOBAL_OUTPUT_SCALE 2

# Theming
exec-once=/usr/bin/xsettingsd &
exec=$HOME/.config/hypr/scripts/import_themes
exec=/usr/bin/hyprpaper

# Polkit and keyring
exec-once=/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec-once=/usr/bin/gnome-keyring-daemon --start --components=secrets

# Hyprland plugins
exec=/usr/local/bin/hyprpm reload -n

# Bar
exec=pkill -9 waybar; /usr/bin/waybar
exec-once=$HOME/.config/waybar/scripts/launch # Use reload-hyprland to ever restart the workspace icons

# IDLE management
exec-once=/usr/bin/hypridle

# Applets / OSD / Notifications
exec=pidof swaync || /usr/bin/swaync
exec=pidof wl-paste || /usr/bin/wl-paste --watch cliphist store
exec=pidof usbguard-applet-qt || /usr/bin/usbguard-applet-qt &
exec=pidof blueman-applet || XDG_CURRENT_DESKTOP=Unity /usr/bin/blueman-applet
exec=pidof nm-applet || /usr/bin/nm-applet --indicator
exec=pidof avizo-service || /usr/bin/avizo-service

# Utilities & Background apps
exec-once=pidof flameshot || /usr/bin/flameshot

# Speed up browser startup
exec-once=[workspace special:backgroundappsbrowser silent] /usr/bin/thorium-browser

# OPTIONAL COMPLETELY personal stuff
{{- if (eq .chezmoi.hostname "ELARCH-F15") }}
exec=[workspace special:backgroundappsvalent silent] pidof valent |  /usr/bin/valent
exec=[workspace special:backgroundappsrogcontrolcenter silent] pidof rog-control-center | /usr/bin/rog-control-center
exec=/usr/bin/pkill -9 seadrive-gui ; /usr/bin/fusermount -cuk $HOME/SeaDrive ; /usr/bin/seadrive-gui
{{- else if (eq .chezmoi.hostname "ELARCH-ISO") }}
exec-once=/usr/bin/calamares_polkit
{{- end }}
