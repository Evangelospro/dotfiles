@import url("{{ .chezmoi.homeDir }}/.config/themes/dracula.css");

window.laptop-1920x1080 {
	border: none;
	border-radius: 0;
	min-height: 0;
	margin: 0;
	padding: 0;
	font-size: 16px;
	font-family: "FiraCode Nerd Font", "FontAwesome 6 Free Solid";
	font-weight: bold;
}

window.external-1360x768 {
	border: none;
	border-radius: 0;
	min-height: 0;
	margin: 0;
	padding: 0;
	font-size: 10px;
	font-family: "FiraCode Nerd Font", "FontAwesome 6 Free Solid";
	font-weight: bold;
}

#waybar {
	background: @transparent;
	color: @black;
    font-weight: bold;
}

#image,
#window,
#idle_inhibitor,
#keyboard-state,
#language,
#custom-notifications,
#custom-powermenu,
#clock,
#battery,
#pulseaudio,
#bluetooth,
#temperature,
#workspaces,
#pulseaudio.input,
#pulseaudio.output,
#backlight,
#custom-colorpicker{
    padding: 0px 10px;
    margin: 3px 0px;
}

#idle_inhibitor {
    background: @yellow;
    font-weight: bold;
    border-radius: 10px 0px 0px 10px;
}

#keyboard-state {
    background: @orange;
    border-radius: 10px 0px 10px 0px;
}

#language {
    background: @orange;
    border-radius: 0px 0px 0px 0px;
}

#window {
    background: @purple;
    border-radius: 10px;
    margin-left: 5px;
    margin-right: 5px;
}

#window.empty {
    border: none;
    background: none;
    padding: 0px 0px;
    margin: 0px 0px;
    opacity: 0;
}

#image {
    margin: 0px 0px;
    padding: 0px 0px;
    border-radius: 5px;
    border: 2px solid @purple;
}

#temperature {
    border-radius: 10px 0px 0px 10px;
}

#temperature.critical {
    color: @red;
}

#backlight {
    border-radius: 10px 0px 0px 10px;
}

#custom-colorpicker {
    background: @pink;
    border-radius: 0px 0px 0px 0px;
}

#tray {
    background: @pink;
    margin: 3px 0px;
    border-radius: 0px 10px 10px 0px;
    margin-right: 10px;
    padding: 0px 3px;
}


#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: #eb4d4b;
}

label:focus {
    background-color: #000000;
}

#network {
    background: @pink;
    margin: 3px 0px;
    border-radius: 10px 0px 0px 10px;
    padding: 0px 5px;
}

#custom-powermenu {
    background: @red;
	padding-right: 15px;
	margin-right: 8px;
    border-radius: 0px 10px 10px 0px;
}

#custom-notifications {
    background: @cyan;
    padding-right: 10px;
    border-radius: 0px 0px 0px 0px;
}

#clock {
    background: @orange;
    border-radius: 10px 10px 10px 10px;
    margin: 0px 10px 0px 10px;
}


#pulseaudio.input {
    background: @red;
    border-radius: 10px 0px 0px 10px;
}

#pulseaudio.output {
    background: @cyan;
}

#battery {
    background: @green;
    border-radius: 0px 10px 10px 0px;
    padding-right: 15px;
    margin-right: 5px;
}
