[Unit]
Description=Keeps the clipboard content of closed applications
PartOf=hyprland-session.target
After=hyprland-session.target

[Service]
Type=simple
# Actuvate only on regular clipboardd as both breaks for some apps
ExecStart=/usr/bin/wl-clip-persist --clipboard regular
ExecStop=/bin/kill -2 $MAINPID
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=hyprland-session.target
